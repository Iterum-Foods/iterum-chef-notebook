# Iterum Culinary App - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Choose ONE email provider: smtp, sendgrid, ses, mailgun
EMAIL_PROVIDER=smtp

# --- Gmail SMTP (for testing) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password

# --- SendGrid (recommended for production) ---
# SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# --- AWS SES (for high volume) ---
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# --- Mailgun (alternative) ---
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=mg.yourdomain.com

# Email Sender Configuration
FROM_EMAIL=noreply@iterumfoods.com
FROM_NAME=Iterum Foods

# ============================================
# APP CONFIGURATION
# ============================================

# App URLs
APP_URL=https://iterum-culinary-app.web.app
BACKEND_URL=http://localhost:8000

# Database
DATABASE_URL=sqlite:///./culinary_data.db

# Security
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# OPTIONAL SERVICES
# ============================================

# Firebase (for authentication)
FIREBASE_CONFIG_PATH=./firebase-config.json

# Analytics
# MIXPANEL_TOKEN=your-mixpanel-token
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/iterum_app.log

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

